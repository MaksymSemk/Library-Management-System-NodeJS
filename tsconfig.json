{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",             // Змінено з NodeNext
    "moduleResolution": "Bundler",  // Дозволяє опускати розширення .js         
    
    "rootDir": "./src",            
    "outDir": "./dist",            
    
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "sourceMap": true,
    
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "verbatimModuleSyntax": true,
    "isolatedModules": true,
    "moduleDetection": "force"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}